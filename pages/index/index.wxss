/**index.wxss**/

camera {
  width: 1px;
  height: 1px;
  position: absolute;
}

.container {
  height: 100%;
  width: 100%;
}

canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: red;
  background: red;
  top: 0;
  z-index: 20;
}

.cover-view {
  position: absolute;
  z-index: 30;
  top: 0;
  left: 0;
  width: 100%;
  max-height: 400rpx;
  border: 1rpx solid red;
  overflow: scroll;
  box-sizing: border-box;
  display: none;
}

.cover-view cover-view {
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

.btns{
 /* display: flex;*/
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: none;
}

.btns button{
  flex: 1;
}
